@model IEnumerable<myFirstProject.ViewModels.SemanaRow>
@{
    ViewData["Title"] = "Cancelar Citas";
}

<h2 class="mb-3">Cancelar Citas</h2>

<!-- Mensaje de confirmación -->
@if (TempData["ok"] != null)
{
    <div class="alert alert-success">@TempData["ok"]</div>
}

<form method="get" class="row g-2 mb-3">
    <div class="col-sm-3">
        <input type="text" name="q" value="@ViewBag.FiltroQ" 
               placeholder="Buscar animal o cliente" class="form-control" />
    </div>
    <div class="col-sm-3">
        <select name="idDoctor" class="form-select">
            <option value="">-- Todos los doctores --</option>
            @foreach (var d in ViewBag.Doctores)
            {
                <option value="@d.Value" selected="@(ViewBag.FiltroDoctor?.ToString() == d.Value)">
                    @d.Text
                </option>
            }
        </select>
    </div>
    <div class="col-sm-2">
        <input type="date" name="desde" value="@(((DateOnly)ViewBag.FiltroDesde).ToString("yyyy-MM-dd"))" class="form-control" />
    </div>
    <div class="col-sm-2">
        <input type="date" name="hasta" value="@(((DateOnly)ViewBag.FiltroHasta).ToString("yyyy-MM-dd"))" class="form-control" />
    </div>
    <div class="col-sm-2">
        <button class="btn btn-primary w-100">Filtrar</button>
    </div>
</form>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Fecha/Hora</th>
            <th>Animal</th>
            <th>Cliente</th>
            <th>Doctor</th>
            <th>Estado</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @if (!Model.Any())
    {
        <tr>
            <td colspan="6" class="text-center text-muted">No se encontraron citas.</td>
        </tr>
    }
    else
    {
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.Fecha.ToString("dd/MM/yyyy HH:mm")</td>
                <td>@c.Animal</td>
                <td>@c.Cliente</td>
                <td>@c.Doctor</td>
                <td>@c.Estado</td>
                <td>
                    <form asp-action="CancelarListado" method="post" class="d-flex gap-2">
                        <input type="hidden" name="idCita" value="@c.Fecha.Ticks" /> <!-- Ajusta: aquí deberías pasar IdCita real -->
                        <input type="text" name="observaciones" placeholder="Motivo" class="form-control form-control-sm" />
                        <button type="submit" class="btn btn-sm btn-danger">Cancelar</button>
                    </form>
                </td>
            </tr>
        }
    }
    </tbody>
</table>
