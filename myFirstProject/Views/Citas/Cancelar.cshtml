@model myFirstProject.ViewModels.CancelarBusquedaVM
@{
    ViewData["Title"] = "Cancelar Cita";
}

<h2 class="mb-3">Cancelar Cita</h2>

<form method="get" class="row g-3 mb-4">
    <div class="col-md-4">
        <label class="form-label">Buscar (animal o cliente)</label>
        <input type="text" name="q" value="@Model.Q" class="form-control" placeholder="Ej: Firu, Ana, etc." />
    </div>
    <div class="col-md-2">
        <label class="form-label">Desde</label>
        <input type="date" name="desde" value="@Model.Desde?.ToString("yyyy-MM-dd")" class="form-control" />
    </div>
    <div class="col-md-2">
        <label class="form-label">Hasta</label>
        <input type="date" name="hasta" value="@Model.Hasta?.ToString("yyyy-MM-dd")" class="form-control" />
    </div>
    <div class="col-md-2 d-flex align-items-end">
        <button class="btn btn-primary">Buscar</button>
    </div>
    <div class="col-md-2 d-flex align-items-end">
        <a asp-action="Nueva" class="btn btn-outline-secondary w-100">Registrar cita</a>
    </div>
</form>

@if (Model.Citas.Count == 0)
{
    <div class="alert alert-info">No hay citas agendadas que cumplan los filtros.</div>
}
else
{
    <table class="table table-striped align-middle">
        <thead>
            <tr>
                <th>#</th>
                <th>Fecha/Hora</th>
                <th>Animal</th>
                <th>Cliente</th>
                <th>Doctor</th>
                <th class="text-end">Acción</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var c in Model.Citas)
        {
            <tr>
                <td>@c.IdCita</td>
                <td>@c.FechaHora.ToString("dd/MM/yyyy HH:mm")</td>
                <td>@c.Animal</td>
                <td>@c.Cliente</td>
                <td>@c.Doctor</td>
                <td class="text-end">
                    <form asp-action="Cancelar" method="post" class="d-inline">
                        <input type="hidden" name="IdCita" value="@c.IdCita" />
                        <input type="hidden" name="Observaciones" value="Cancelada desde listado" />
                        <button class="btn btn-sm btn-danger" onclick="return confirm('¿Cancelar la cita @c.IdCita?');">
                            Cancelar
                        </button>
                    </form>
                    <a asp-action="Detalle" asp-route-id="@c.IdCita" class="btn btn-sm btn-outline-secondary ms-2">
                        Detalle
                    </a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}
