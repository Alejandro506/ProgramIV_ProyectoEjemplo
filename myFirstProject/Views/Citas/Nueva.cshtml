@model myFirstProject.ViewModels.RegistrarCitaVM
@{
    ViewData["Title"] = "Registrar Cita";
    var animales = (IEnumerable<dynamic>)ViewBag.Animales;
    var doctores = (IEnumerable<dynamic>)ViewBag.Doctores;
}

<h2>Registrar Cita</h2>
<form asp-action="Nueva" method="post" class="mt-3">
    <div class="mb-2">
        <label>Animal</label>
        <select asp-for="IdAnimal" class="form-select">
            @foreach (var a in animales) { <option value="@a.IdAnimal">@a.Nombre</option> }
        </select>
    </div>
    <div class="mb-2">
        <label>Doctor</label>
        <select asp-for="IdDoctor" class="form-select">
            @foreach (var d in doctores) { <option value="@d.IdDoctor">@d.Nombre</option> }
        </select>
    </div>
    <div class="mb-2">
        <label>Fecha y hora</label>
        <input asp-for="FechaHora" type="datetime-local" class="form-control" />
    </div>
    <div class="mb-2">
        <label>Observaciones</label>
        <input asp-for="Observaciones" class="form-control" />
    </div>
    <button class="btn btn-primary">Registrar</button>
</form>

<partial name="_ValidationScriptsPartial" />
