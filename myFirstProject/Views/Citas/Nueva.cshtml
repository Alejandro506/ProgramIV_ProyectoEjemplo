@model myFirstProject.ViewModels.RegistrarCitaVM
@{
    ViewData["Title"] = "Registrar Cita";
    var dt = (Model.FechaHora == default) ? DateTime.Now : Model.FechaHora;
    // Formato para datetime-local sin segundos/milisegundos
    string dtValue = dt.ToString("yyyy-MM-ddTHH:mm");
}
<h2 class="mb-3">Registrar Cita</h2>

<form asp-action="Nueva" method="post" class="row g-3">
    <div class="col-12 col-md-6">
        <label class="form-label">Animal</label>
        <select asp-for="IdAnimal" class="form-select"
                asp-items="@(new SelectList((IEnumerable<dynamic>)ViewBag.Animales, "IdAnimal", "Nombre"))"></select>
    </div>
    <div class="col-12 col-md-6">
        <label class="form-label">Doctor</label>
        <select asp-for="IdDoctor" class="form-select"
                asp-items="@(new SelectList((IEnumerable<dynamic>)ViewBag.Doctores, "IdDoctor", "Nombre"))"></select>
    </div>

    <div class="col-12 col-md-6">
        <label class="form-label">Fecha y hora</label>
        <input type="datetime-local" class="form-control" name="FechaHora"
               value="@dtValue" step="1800" />
        <div class="form-text">Selecciona en bloques de 30 minutos.</div>
    </div>

    <div class="col-12">
        <label class="form-label">Observaciones</label>
        <input asp-for="Observaciones" class="form-control" />
    </div>

    <div class="col-12">
        <button class="btn btn-primary">Registrar</button>
    </div>
</form>
