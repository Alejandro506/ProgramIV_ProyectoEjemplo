@model IEnumerable<myFirstProject.Controllers.DoctoresController.DoctorRow>
@{
    ViewData["Title"] = "Doctores";
    var q = ViewBag.Q as string;
}
<h2 class="mb-3">Doctores</h2>

<form method="get" class="row g-2 mb-3">
    <div class="col-sm-4">
        <input class="form-control" name="q" value="@q" placeholder="Buscar por nombre..." />
    </div>
    <div class="col-auto">
        <button class="btn btn-primary">Buscar</button>
    </div>
    <div class="col-auto">
        <a asp-action="Create" class="btn btn-success">Nuevo doctor</a>
    </div>
</form>

<table class="table table-hover align-middle">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nombre</th>
            <th># Citas</th>
            <th class="text-end">Acciones</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var r in Model)
    {
        <tr>
            <td>@r.IdDoctor</td>
            <td>@r.Nombre</td>
            <td>@r.CantCitas</td>
            <td class="text-end">
                <a asp-action="Details" asp-route-id="@r.IdDoctor" class="btn btn-sm btn-outline-secondary">Detalle</a>
                <a asp-action="Edit" asp-route-id="@r.IdDoctor" class="btn btn-sm btn-warning ms-1">Editar</a>
                <a asp-action="Delete" asp-route-id="@r.IdDoctor" class="btn btn-sm btn-danger ms-1">Eliminar</a>
            </td>
        </tr>
    }
    </tbody>
</table>
