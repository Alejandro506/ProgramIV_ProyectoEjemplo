@model IEnumerable<dynamic>

@if (Model != null && Model.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Product ID</th>
                    <th>Name</th>
                    <th>List Price</th>
                    <th>Color</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                    <tr>
                        <td>@product.ProductID</td>
                        <td>@product.Name</td>
                        <td>@string.Format("{0:C}", product.ListPrice)</td>
                        <td>
                            @if (!string.IsNullOrEmpty(product.Color) && product.Color != "N/A")
                            {
                                <span class="badge" style="background-color: @product.Color.ToLower(); color: white; padding: 4px 8px;">
                                    @product.Color
                                </span>
                            }
                            else
                            {
                                <span class="text-muted">N/A</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    
    <div class="mt-3">
        <small class="text-muted">
            Found @Model.Count() product(s) in this category.
        </small>
    </div>
}
else
{
    <div class="alert alert-info">
        <i class="fas fa-info-circle"></i>
        No products found in this category.
    </div>
}
