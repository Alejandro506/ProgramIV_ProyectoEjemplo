@model myFirstProject.Data.Models.Cliente
@{
    ViewData["Title"] = "Eliminar cliente";
    int cant = ViewBag.CantAnimales ?? 0;
}
<h2 class="mb-3">Eliminar cliente</h2>

<div class="alert alert-warning">
    Â¿Desea eliminar al cliente <strong>@Model.Nombre</strong>?
    @if (cant > 0)
    {
        <div class="mt-2 text-danger">
            No se puede eliminar: tiene @cant animales registrados.
        </div>
    }
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" name="id" value="@Model.IdCliente" />
    <a asp-action="Index" class="btn btn-outline-secondary">Volver</a>
    <button class="btn btn-danger" @(cant > 0 ? "disabled" : null)>Eliminar</button>
</form>
