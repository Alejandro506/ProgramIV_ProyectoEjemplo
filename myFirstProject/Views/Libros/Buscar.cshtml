@model IEnumerable<myFirstProject.MyModels.LibroViewModel>

@{
    ViewData["Title"] = "Buscar Libros";
}

<h2>Buscar Libros</h2>

<form asp-controller="Libros" asp-action="PorId" method="get">
    <label>Buscar por ID:</label>
    <input type="number" name="id" />
    <button type="submit">Buscar</button>
</form>

<hr />

<form asp-controller="Libros" asp-action="PorFullName" method="get">
    <label>Buscar por Nombre Completo:</label>
    <input type="text" name="fullname" />
    <button type="submit">Buscar</button>
</form>

<hr />

<form asp-controller="Libros" asp-action="PorRango" method="get">
    <label>Año Desde:</label>
    <input type="number" name="desde" />
    <label>Hasta:</label>
    <input type="number" name="hasta" />
    <button type="submit">Buscar</button>
</form>

<hr />

<form asp-controller="Libros" asp-action="PorEditor" method="get">
    <label>Buscar por Editor:</label>
    <input type="text" name="editor" />
    <button type="submit">Buscar</button>
</form>

<hr />

@if (Model != null && Model.Any())
{
    <h3>Libros encontrados</h3>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nombre Original</th>
                <th>Nombre Español</th>
                <th>Editor</th>
                <th>Año</th>
                <th>Nombre Completo</th>
                <th>Antigüedad</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var libro in Model)
        {
            <tr>
                <td>@libro.Id</td>
                <td>@libro.OriginalName</td>
                <td>@libro.SpanishName</td>
                <td>@libro.Editor</td>
                <td>@libro.Year</td>
                <td>@libro.FullName</td>
                <td>@libro.Antiquity años</td>
            </tr>
        }
        </tbody>
    </table>
}
