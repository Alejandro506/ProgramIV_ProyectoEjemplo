@model myFirstProject.Controllers.TiposAnimalesController.TipoAnimalForm
@{
    ViewData["Title"] = "Editar Tipo de Animal";
}
<h2 class="mb-3">Editar Tipo de Animal</h2>

<form asp-action="Edit" method="post" class="card p-3">
    <input type="hidden" asp-for="IdTipo" />

    <div class="mb-3">
        <label class="form-label">Id</label>
        <input class="form-control" value="@Model.IdTipo" disabled />
    </div>

    <div class="mb-3">
        <label asp-for="Descripcion" class="form-label"></label>
        <input asp-for="Descripcion" class="form-control" />
        <span asp-validation-for="Descripcion" class="text-danger"></span>
    </div>

    <div class="d-flex gap-2">
        <button class="btn btn-warning">Guardar cambios</button>
        <a asp-action="Index" class="btn btn-outline-secondary">Volver</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
