@model IEnumerable<myFirstProject.Controllers.TiposAnimalesController.AnimalOfTypeRow>
@using myFirstProject.Data.Models
@{
    ViewData["Title"] = "Detalle del Tipo";
    var tipo = (TiposAnimale)ViewBag.Tipo;
}
<h2 class="mb-3">Tipo: @tipo.Descripcion (@tipo.IdTipo)</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">No hay animales registrados para este tipo.</div>
}
else
{
    <table class="table table-striped table-hover align-middle">
        <thead>
            <tr>
                <th>Id</th>
                <th>Animal</th>
                <th>Cliente</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var a in Model)
        {
            <tr>
                <td>@a.IdAnimal</td>
                <td>@a.Nombre</td>
                <td>@a.Cliente</td>
            </tr>
        }
        </tbody>
    </table>
}

<div class="mt-3">
    <a asp-action="Index" class="btn btn-outline-secondary">Volver</a>
    <a asp-action="Edit" asp-route-id="@tipo.IdTipo" class="btn btn-warning ms-2">Editar</a>
    <a asp-action="Delete" asp-route-id="@tipo.IdTipo" class="btn btn-danger ms-2">Eliminar</a>
</div>

