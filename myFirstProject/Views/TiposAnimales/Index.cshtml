@model IEnumerable<myFirstProject.Controllers.TiposAnimalesController.TipoAnimalRow>
@{
    ViewData["Title"] = "Tipos de Animales";
    var q = (string?)ViewBag.Q ?? "";
}
<h2 class="mb-3">Tipos de Animales</h2>

<form method="get" class="row g-2 mb-3">
    <div class="col-auto">
        <input class="form-control" type="text" name="q" value="@q" placeholder="Buscar por descripción..." />
    </div>
    <div class="col-auto">
        <button class="btn btn-primary">Buscar</button>
        <a asp-action="Create" class="btn btn-success ms-2">Nuevo tipo</a>
    </div>
</form>

<table class="table table-striped table-hover align-middle">
    <thead>
        <tr>
            <th>Id</th>
            <th>Descripción</th>
            <th class="text-end"># Animales</th>
            <th class="text-end">Acciones</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var t in Model)
    {
        <tr>
            <td>@t.IdTipo</td>
            <td>@t.Descripcion</td>
            <td class="text-end">@t.CantAnimales</td>
            <td class="text-end">
                <a asp-action="Details" asp-route-id="@t.IdTipo" class="btn btn-sm btn-outline-secondary">Detalle</a>
                <a asp-action="Edit" asp-route-id="@t.IdTipo" class="btn btn-sm btn-warning ms-1">Editar</a>
                <a asp-action="Delete" asp-route-id="@t.IdTipo" class="btn btn-sm btn-danger ms-1">Eliminar</a>
            </td>
        </tr>
    }
    </tbody>
</table>
